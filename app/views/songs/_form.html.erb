<% if flash[:errors] %>
    <ul>
    <% flash[:errors].each do |error| %>
        <li style="color: red">
            <%= error%>
        </li>
    <% end %>
    </ul>
<% end %>

<%= form_for @song do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br>

  <%= f.label "Artist Name" %>
  <%= f.text_field :artist_name %><br>

  <%= f.label "Genre" %>
  <%= f.text_field :genre %><br>

  <%= f.label "Released?" %>
  <%= f.check_box :released %> <br>

  <%= f.label "Release year" %>
  <%= f.number_field :release_year %><br>
 
  <%= f.submit %>
<% end %>